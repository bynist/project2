
<p id="notice"><%= notice %></p>

<h1>Your Gift </h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Model</th>
      <th>Year</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.name %></td>
        <td><%= gift.link %></td>
        <td><%= gift.price %></td>
        <td><%= gift.where_to_buy %></td>
        <td><%= gift.description %></td>
        <td><%= gift.name %></td>

        <td><%= link_to 'Show', gift %></td>
        <td><%= link_to 'Edit', edit_user_gift_path(gift) %></td>
        <td><%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

